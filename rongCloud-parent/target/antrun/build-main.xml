<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
  <if>
    <equals arg2="bundle" arg1="pom"/>
    <then>
      <if>
        <available file="target/rongCloud-parent-1.0.1-SNAPSHOT.jar"/>
        <then>
          <if>
            <available file="d:/java-develop/tools/apache-karaf-4.1.2/deploy" type="dir"></available>
            <then>
              <copy file="target/rongCloud-parent-1.0.1-SNAPSHOT.jar" todir="d:/java-develop/tools/apache-karaf-4.1.2/deploy"/>
            </then>
          </if>
        </then>
      </if>
    </then>
  </if>
  <if>
    <equals arg2="ETC" arg1="${project.description}"/>
    <then>
      <if>
        <available file="d:/java-develop/tools/apache-karaf-4.1.2/etc" type="dir"></available>
        <then>
          <copy todir="d:/java-develop/tools/apache-karaf-4.1.2/etc">
            <fileset includes="*.cfg" dir="target/classes"></fileset>
          </copy>
        </then>
      </if>
    </then>
  </if>
</target>
</project>